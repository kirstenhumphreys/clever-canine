<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<body class="container-fluid">
  <header>
    <% include ../partials/header %>
  </header>


  <main class="container">
      <br><br>
      <h3><%= currentUser.name %>'s Subscriptions:</h3>
      <br><br>
      <div class="subscriptions">
      <% items.forEach(function(item) { %>
        <h5>
        <form method="POST" action="/items/<%= item._id %>?_method=DELETE">
        <a href="/items/<%= item._id %>"><%= item.title %></a>
        </h5>
        <h6> Plan Type: <%= item.plan %> </h6>
        <h6> In Cart?</h6> <% if (item.inCart) { %>
          <i class="small material-icons">thumb_up</i>
        <% } else { %>
          <i class="small material-icons">thumb_down</i>
        <% } %>
        <br>
        <button type="submit" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">delete</i></button>
      <% }) %>
    <br><br>

    <div class="buttons">
    <a href="/items/new" id="download-button" class="btn-large waves-effect waves-light yellow darken-1">New Item</a>

    <a href="/items/order" id="download-button" class="btn-large waves-effect waves-light yellow darken-2">Place Order</a>

    </div>

    </div>
  </main>



  <footer>
    <% include ../partials/footer %>
  </footer>
</body>

</html>


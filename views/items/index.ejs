<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<body class="container-fluid">
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div>
      <h3>Items:</h3>
      <% items.forEach(function(item) { %>
        <h4>
          <form method="POST" action="/items/<%= item._id %>?_method=DELETE">
            <a href="/items/<%= item._id %>">
              <%= item.title + ' - ' + item.completed %>
            </a>
              <button class="btn waves-effect waves-light red darken-1" type="submit" name="action">Delete
              <i class="material-icons right">send</i>
              </button>
          </form>
        </h4>
      <% }) %>
    </div>
    <a href="/items/new" id="download-button" class="btn-large waves-effect waves-light yellow darken-1">New Item</a>
  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>


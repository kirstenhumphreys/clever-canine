<div class="form-group">
  <label for="title">Title</label>
  <input type="text"
         class="form-control"
         name="title"
         value="<%= item.title %>">
</div>

<div class="form-group">
  <label for="plan">Plan</label>
  <input type="text"
         class="form-control"
         name="Plan"
         value="<%= item.plan %>">
</div>

<div class="form-group">
  <label for="inCart">In Cart</label>
  <input type="checkbox"
         class="form-control"
         name="inCart"
         <%= item.inCart ? 'checked' : '' %> >
</div>
